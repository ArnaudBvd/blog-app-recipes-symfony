{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block body %}
	<section class="login">
		<div class="container login-register__container">
			<form method="post" class="login-register__form">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="link__form">
						Vous êtes connecté en tant que
						{{ app.user.firstname }},
						<a href="{{ path('app_logout') }}">Se déconnecter</a>
					</div>
				{% endif %}

				<h1>Veuillez vous connecter</h1>
				<label for="inputEmail">Email :</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="Veuillez saisir votre email">
				<label for="inputPassword">Mot de passe :</label>
				<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Veuillez saisir votre mot de passe">

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div class="checkbox mb-3">
					<label>
						<input type="checkbox" name="_remember_me">
						Se souvenir de moi
					</label>
				</div>

				<div>
					<p class="forgotten__password">
						<a href="#">Mot de passe oublié ?</a>
					</p>

				</div>

				<div class="link__form">
					<p>Pas encore inscrit(e) ?
						<a href="#">S'enregistrer</a>
					</p>
				</div>

				<div class="btn__login-register">
					<button class="btn" type="submit">
						Se connecter
					</button>
				</div>
			</form>
		</div>
	</section>
{% endblock %}
